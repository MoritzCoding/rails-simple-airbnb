<body>


<%# NAVBAR %>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/flats">Simple Airbnb</a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <div class="ms-auto flex">
            <form class="flex my-2 my-lg-0">
              <input class="form-control me-2" name="query" type="search" placeholder="Search" aria-label="Search" value="">
              <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
            <a class="btn btn-outline-primary my-2 my-sm-0 ms-2" href="/flats/new">Add Flat</a>
          </div>
        </div>
      </div>
    </nav>


<%# CONTAINER %>
  <div class="container mt-3">

    <div class="row">
      <div class="col-12">
        <h1>All our Flats</h1>
      </div>
    </div>


<%# CARDS %>
<div class="row">
  <% @flats.each do |flat| %>
    <div class="flat-card">
      <img src='https://source.unsplash.com/random/600x300'>
      <div class="flat-card-content">
        <div class="flat-card-title">
          <h3><%= flat.name %></h3>
        </div>
          <p><%= flat.address %></p>
        <div class="flex flat-card-info">
          <div class="flat-card-people">
              <i class="material-icons me-2">people</i>
              <span><%= flat.number_of_guests %></span>
          </div>
          <div class="flat-card-price">
              <i class="material-icons me-2">euro_symbol</i>
              <span><%= flat.price_per_night%></span>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</body>
